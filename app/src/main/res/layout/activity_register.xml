<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailET"
        android:hint="Email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/felhET"
        android:hint="Felhasználónév"
        android:layout_below="@id/emailET"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jelszoET"
        android:hint="Jelszó"
        android:inputType="textPassword"
        android:layout_below="@id/felhET"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TNevET"
        android:hint="Teljes név"
        android:layout_below="@id/jelszoET"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegisztracioBTN"
        android:text="Regisztráció"
        android:layout_below="@id/TNevET"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VisszaBTN"
        android:text="Vissza"
        android:layout_below="@id/RegisztracioBTN"
        />

</RelativeLayout>